<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView android:background="#000000" android:textSize="20sp" android:layout_height="wrap_content" android:text="@string/title_main" android:textStyle="bold" android:textColor="#AAAAAA" android:layout_width="match_parent" android:id="@+id/title1" ></TextView>
    <LinearLayout android:id="@+id/linearLayout2" android:orientation="vertical" android:layout_height="20dip" android:layout_width="match_parent"></LinearLayout>
    <ImageView android:layout_gravity="center" android:layout_margin="2dip" android:layout_height="wrap_content" android:src="@drawable/title" android:layout_width="match_parent" android:id="@+id/image" android:contentDescription="@string/app_logo"></ImageView>
    <TextSwitcher android:layout_height="wrap_content" android:id="@+id/menuSwitcher" android:layout_width="match_parent"></TextSwitcher>
    <ViewSwitcher android:layout_height="match_parent" android:id="@+id/itemSwitcher" android:layout_width="match_parent">
        <ListView android:layout_width="match_parent" android:id="@+id/list" android:layout_height="match_parent"></ListView>
    </ViewSwitcher>
</LinearLayout>
